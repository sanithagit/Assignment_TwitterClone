<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Twitter_Clone</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link href="~/Content/Site.css" rel="stylesheet" />
</head>
<body>
    <header>
        <div class="container-fluid">
            <div class="row">
                <div class="col-3">
                    @Html.ActionLink("Twitter Clone", "Login", "Person", new { area = "" }, new { @class = "Logo" })
                </div>
                <div class="col-6 ">
                    <section class="navbar-nav">
                        <nav class="horizontal">
                            <ul class="nav ">
                                <li class="nav-item">
                                    <a>@Html.ActionLink("Home", "Index", "Home", null, new { @class = "nav-item nav-link" })</a>
                                </li>
                                <li class="nav-item">
                                    <a>@Html.ActionLink("Profile", "Details", "Person", null, new { @class = "nav-item nav-link" })</a>
                                </li>
                                <li class="nav-item">
                                    <a>@Html.ActionLink("About", "About", "Home", null, new { @class = "nav-item nav-link" })</a>
                                </li>
                               
</ul>                       
                        </nav>
                    </section>
                </div>
                <div class="col-3 ">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <section >
                            <nav class="horizontal">
                                <ul >
                                    <li ><text class="font-italic">Logged in as @User.Identity.Name </text></li>
                                    <li>
                                        <a>@Html.ActionLink("Sign Out", "Logout", "Person", null, new { @class = "nav-item nav-link" })</a>

                                    </li>
                                </ul>
                            </nav>
                        </section>
                    }
                </div>
                </div>
            </div>      
    </header>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; 2019 - Twitter_Clone-MVC</p>
        </footer>
    </div>

    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
</body>
</html>
